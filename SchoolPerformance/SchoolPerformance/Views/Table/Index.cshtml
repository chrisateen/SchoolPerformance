@model SchoolPerformance.ViewModels.TableViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutTable.cshtml";
}

<div class="content-wrapper">

    <div class="pl-2 pr-2 pt-2 pb-2">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Results Table All Pupils</h3>
            </div>
            <div class="card-body">
                <table id="resultsTable" class="table table-striped table-bordered" style="width:100%">
                </table>
            </div>
        </div>
    </div>

</div>

<script src="~/js/Table.js"></script>

<script>
    var $table = $('#resultsTable');
    var tableCols = [
        { data: "urn", title:"@Html.DisplayNameFor(m => m.URN)" },
        { data: "leaestab", title: "@Html.DisplayNameFor(m => m.LEAESTAB)"},
        { data: "schname", title: "@Html.DisplayNameFor(m => m.SCHNAME)"},
        { data: "ptfsM6CLA1A", title: "@Html.DisplayNameFor(m => m.PTFSM6CLA1A)"},
        { data: "atT8SCR", title: "@Html.DisplayNameFor(m => m.ATT8SCR)"},
        { data: "p8MEA", title: "@Html.DisplayNameFor(m => m.P8MEA)"},
        { data: "ptL2BASICS_94", title: "@Html.DisplayNameFor(m => m.PTL2BASICS_94)"},
        { data: "ptL2BASICS_95", title: "@Html.DisplayNameFor(m => m.PTL2BASICS_95)"}
    ];


    $(function () {

        loadTable($table, tableCols);

    });

</script>