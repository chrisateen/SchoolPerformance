
@{
    ViewData["Title"] = "_Layout";
}
<!DOCTYPE html>
<!--
AdminLTE version 3 Bootstrap Admin Dashboard Template used to create the views for this project
-->

<html lang="en">

<head>
    <link rel="shortcut icon" href="#">
    <!-- Font Awesome Icons -->
    <link href="~/font-awesome/css/all.min.css" rel="stylesheet" />

    <!-- Theme style -->
    <link href="~/admin-lte/css/adminlte.min.css" rel="stylesheet" />
    <link href="~/css/Styles.css" rel="stylesheet" />

    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

    <!-- Link to required JS files-->
    <script src="~/jquery/jquery.js"></script>
    <script src="~/popper.js/umd/popper.js"></script>
    <script src="~/twitter-bootstrap/js/bootstrap.js"></script>
    <script src="~/admin-lte/js/adminlte.js"></script>
    <script src="~/Chart.js/Chart.js"></script>

</head>

<body class="hold-transition sidebar-mini">

    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light main-navbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->

        <!-- Header Sidebar-->
        <aside class="main-sidebar sidebar-dark-light elevation-4">

            <a asp-controller="Home" asp-action="Index" class="brand-link">
                <span class="brand-text font-weight-light">School Performance</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                        <!-- Scatterplot option -->
                        <li class="nav-item">
                            <a asp-controller="Scatterplot" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-chart-area"></i>
                                <p>
                                    Result Scatterplot
                                </p>
                            </a>
                        </li>
                        <!-- /.scatterplot option -->
                        <!-- Table options -->
                        <li class="nav-item has-treeview">
                            <!-- Table options header -->
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-table"></i>
                                <p>
                                    Result Tables
                                    <i class="fas fa-angle-left right"></i>
                                    <span class="badge badge-info right">2</span>
                                </p>
                            </a>
                            <ul class="nav nav-treeview" style="display: none;">
                                <!-- /.table options header -->
                                <!-- Table option all pupils -->
                                <li class="nav-item">
                                    <a asp-controller="Table" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Results All</p>
                                    </a>
                                </li>
                                <!-- /.table option all pupils-->
                                <!-- Table option disadvantaged pupils -->
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Results Disadvantaged</p>
                                    </a>
                                </li>
                                <!-- /.table option disadvantaged pupils -->
                            </ul>
                        </li>
                        <!-- /.table options -->
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->

            </div>
            <!-- /.sidebar -->

        </aside>
        <!-- /.sidebar -->

        @RenderBody()

        <!-- Footer -->
        <footer class="main-footer">
            <strong>Copyright &copy; 2020 </strong> All rights reserved.
        </footer>
        <!-- /.footer -->

    </div>

</body>

</html>